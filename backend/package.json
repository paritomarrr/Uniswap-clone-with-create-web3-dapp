{
	"name": "uniswap-clone",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "npx hardhat compile",
		"deploy-testnet": "npx hardhat run ./scripts/MyContract_deploy.js --network MATIC_MUMBAI",
		"deploy": "npx hardhat run ./scripts/MyContract_deploy.js --network MATIC_MAINNET",
		"node": "npx hardhat node",
		"deploy-local": "npx hardhat run ./scripts/MyContract_deploy.js --network localhost"
	},
	"dependencies": {
		"@openzeppelin/contracts": "^4.8.3",
		"@uniswap/v3-periphery": "^1.4.3",
		"dotenv": "^16.0.2",
		"ethers": "^6.3.0"
	},
	"devDependencies": {
		"@nomicfoundation/hardhat-toolbox": "^1.0.2",
		"hardhat": "^2.10.1"
	}
}
